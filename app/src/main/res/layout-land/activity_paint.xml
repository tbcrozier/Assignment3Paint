<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_paint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context="com.davidroach.assignment3paint.PaintActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/pencil"
            android:id="@+id/pencilButton"
            android:layout_weight="1"
            android:contentDescription="@string/pencil_button" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/brush"
            android:id="@+id/brushButton"
            android:layout_weight="1"
            android:contentDescription="@string/brush_button" />
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/bucket"
            android:id="@+id/bucketButton"
            android:layout_weight="1"
            android:contentDescription="@string/bucket_button" />
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/erase"
            android:id="@+id/eraseButton"
            android:layout_weight="1"
            android:contentDescription="@string/erase_button" />
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/open"
            android:id="@+id/openButton"
            android:layout_weight="1"
            android:contentDescription="@string/open_button" />
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/save"
            android:id="@+id/saveButton"
            android:layout_weight="1" />


    </LinearLayout>

    <com.davidroach.assignment3paint.DrawArea
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/draw_area_view"
        android:layout_marginTop="30dp" />
</LinearLayout>